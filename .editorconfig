root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{py,rst,ini}]
indent_size = 4

[*.py]
profile = black
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.{html,css,scss,json,yml,xml}]
indent_size = 2

[Makefile]
indent_style = tab